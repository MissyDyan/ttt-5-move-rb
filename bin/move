#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
puts "\n"
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
puts "Please enter 1 to 9:"
puts "\n"

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
player_input = gets.strip
index = input_to_index(player_input)
puts "\n"

move(board, index)
display_board(board)
puts "\n\n"